pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                dir('app2/build') {
                    script {
                        dockerImage = docker.build("<DOCKERHUB_USERNAME>/app2:${env.BUILD_NUMBER}")
                        docker.withRegistry("<DOCKERHUB_USERNAME>") {
                            dockerImage.push()
                        }
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                sh 'kubectl apply -f app2/deploy/app2-deployment.yaml'
                sh 'kubectl apply -f app2/deploy/app2-service.yaml'
            }
        }
    }
}
